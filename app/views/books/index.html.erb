
<h1>Books</h1>
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to 'Show', book %></td>
  <td><%= link_to 'Edit', edit_book_path(book) %></td>
  <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
  
</tr>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>


<% end %>

  </tbody>
</table>
  
<h1>New Book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <H4>Title</H4>
  <%= f.text_field :title %>
  
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Creat Book' %>
<% end %>
